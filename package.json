{
  "name": "my-app",
  "version": "0.0.1",
  "description": "",
  "homepage": "",
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "license": "MIT",
  "main": "furo-catalog.js",
  "scripts": {
    "build:spec": "./node_modules/@furo/specs/_scripts/build.js",
    "start": "es-dev-server --open",
    "start:build": "cd dist && es-dev-server --port 8888 --open",
    "start:polymer": "polymer serve",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --compatibility all --coverage"
  },
  "dependencies": {
    "@furo/collection": "*",
    "@furo/specs": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@open-wc/building-rollup": "^0.9.0",
    "@open-wc/eslint-config": "^1.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/semantic-dom-diff": "^0.15.3",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.1.54",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "es-dev-server": "^1.23.1",
    "eslint": "^6.6.0",
    "eslint-plugin-lit": "^1.2.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lint-staged": "^8.0.0",
    "mocha": "^6.1.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-workbox": "^4.0.0",
    "webpack-merge": "^4.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.0"
  },
  "eslintConfig": {

    "globals": {
      "assert": "writable"
    },
    "plugins": [
      "lit"
    ],
    "env": {
      "browser": true
    },
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier",
      "plugin:lit/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": false,
          "optionalDependencies": false,
          "peerDependencies": false,
          "packageDir": [
            "./node_modules/@furo/collection",
            "./node_modules/@furo/framework"
          ]
        }
      ]
    }
  },

  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
